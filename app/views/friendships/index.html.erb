<h1>Friendships for <%= current_user.email %></h1>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
  <br>
<% end %>

<h2> Add new friend </h2>
<%= render 'form', friendship: @friendship %>

<h2> Your friendships </h2>
<% current_user.friends.each do |friend| %>
  <ul>
  <%= friend.email %>
<%= link_to "Unfriend", delete_request_path(id: friend.id), method: :delete %>
  </ul>
<% end %>


<h2> Requests you've made </h2>
<% current_user.pending_friends.each do |friend| %>
  <ul>
<%= friend.email %>
  </ul>
<% end %>


<h2> Requests you've recieved </h2>
<% current_user.friend_requests.each do |friend| %>
  <ul>
<%= friend.email %>
<%= link_to "Accept", accept_friend_path(id: friend.id), method: :post %>
<%= link_to "Decline", delete_request_path(id: friend.id), method: :delete %>
<% end %>

